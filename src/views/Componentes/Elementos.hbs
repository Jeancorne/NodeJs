<section class="add_productos">
    <div id="container_productos" class="container">
        <div id="contenido_addproducto" class="row">
            <form id="form_elementos">
                <div style="margin-right: 0px; margin-left: 0px;" class="row">
                    <div style="height:auto; padding:1%;" class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" name="Nombre" placeholder="Nombre Producto">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" id="money" min="0.00" name="precio"
                                placeholder="Precio" step="500" />
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Tipo" id="exampleFormControlSelect1">
                                <option value="" disabled selected>Tipo</option>
                                <option value="HOMBRE">Hombre</option>
                                <option value="MUJER">Mujer</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Categoria" id="exampleFormControlSelect1">
                                <option value="" disabled selected>Categoría</option>
                                <option value="INTERIOR">INTERIOR</option>
                                <option value="EXTERIOR">EXTERIOR</option>
                                <option value="DEPORTIVA">DEPORTIVA</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Marca" id="exampleFormControlSelect1">
                                <option value="" disabled selected>Marca</option>
                                <option value="CUSTER">CUSTER</option>
                                <option value="ARTURO CALLE">ARTURO CALLE</option>
                                <option value="NIKE">NIKE</option>
                                <option value="DC">DC</option>
                                <option value="CONVERSE">CONVERSE</option>
                            </select>
                        </div>
                        <div class="form-inline">
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" value="XS" />XS
                                    <input type="number" placeholder="Cantidad de XS" id="XS" min="0"
                                        class="form-control" />
                                </label>

                            </div>
                        </div>
                        <div class="form-inline">
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" value="S" />S
                                    <input type="number" placeholder="Cantidad de S" id="S" min="0"
                                        class="form-control" />
                                </label>

                            </div>
                        </div>
                        <div class="form-inline">
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" value="M" />M
                                    <input type="number" placeholder="Cantidad de M" id="M" min="0"
                                        class="form-control" />
                                </label>

                            </div>
                        </div>
                        <div class="form-inline">
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" value="L" />L
                                    <input type="number" placeholder="Cantidad de L" id="L" min="0"
                                        class="form-control" />
                                </label>

                            </div>
                        </div>
                        <div class="form-inline">
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" value="XL" />XL
                                    <input type="number" placeholder="Cantidad de XL" id="XL" min="0"
                                        class="form-control" />
                                </label>

                            </div>
                        </div>
                        <div class="form-inline">
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" value="XXL" />XXL
                                    <input type="number" placeholder="Cantidad de XXL" id="XXL" min="0"
                                        class="form-control" />
                                </label>

                            </div>
                        </div>
                    </div>
                    <div style=" height:auto; padding:1%;" class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <div style="text-align:center;" class="form-group">
                                    <h3>Imagen Producto</h3>
                                    <label class="lbl_imagen" for="imgpro">
                                        <span style="font-size:6rem;" class="icon-cloud-upload"></span>
                                        <input style="display:none" name="imagen" id="imgpro" type="file">
                                        <h4 id="name_img"></h4>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div style="text-align:center;" class="form-group">
                                    <div class="preview">
                                        <img id="blah" src="#" alt="your image" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="Descripcion" placeholder="Descripción Producto"
                                rows="10"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="btn_sub">
                        <button type="submit" class="btn btn-main btn-large btn-round">Registrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>